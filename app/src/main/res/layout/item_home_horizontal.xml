<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:orientation="vertical"
    android:background="@drawable/shape_rectangle_8_fff">

    <ImageView
        android:id="@+id/ivPoster_homeHorizontal"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/iv_sample_product"/>

    <TextView
        android:id="@+id/txt_title_homeHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheery Healthy"
        style="@style/TextView.PoppinsNormal16sp202020"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <RatingBar
        android:id="@+id/rb_food_homeHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:theme="@style/RatingBar"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

</LinearLayout>