<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signin.SignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="26dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            style="@style/TextView.PoppinsMedium22sp202020"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find your best ever meal"
            style="@style/EditText.PoppinsNormal14sp8D92A3"/>

        <TextView
            android:id="@+id/txt_phoneNo_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone No."
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp202020"/>

        <EditText
            android:id="@+id/et_phoneNo_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your phone number"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_black"
            style="@style/EditText.PoppinsNormal14sp8D92A3"/>

        <TextView
            android:id="@+id/txt_address_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp202020"/>

        <EditText
            android:id="@+id/et_address_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your address"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_black"
            style="@style/EditText.PoppinsNormal14sp8D92A3"/>

        <TextView
            android:id="@+id/txt_houseNo_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House No."
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp202020"/>

        <EditText
            android:id="@+id/et_houseNo_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your house number"
            android:inputType="textPassword"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_black"
            style="@style/EditText.PoppinsNormal14sp8D92A3"/>

        <TextView
            android:id="@+id/txt_city_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp202020"/>

        <EditText
            android:id="@+id/et_city_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select your city"
            android:inputType="textPassword"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_black"
            style="@style/EditText.PoppinsNormal14sp8D92A3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signUpNow_signUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up Now"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="24dp"
            style="@style/Button.Primary" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>